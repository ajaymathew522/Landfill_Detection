{
    "name": "python-app",
    "displayName": "Python App",
    "builder": "docker",
    "builderConfig": {
      "dockerfile": "Dockerfile",
      "context": "."
    },
    "env": {
      "PORT": {
        "description": "Port to run the application",
        "type": "number",
        "default": 8080
      }
    },
    "services": [
      {
        "name": "web",
        "port": 8080,
        "routes": [
          {
            "src": "/",
            "dest": 8080
          }
        ]
      }
    ]
  }
  